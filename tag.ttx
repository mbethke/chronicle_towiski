<!doctype html>
<html lang="de">
  <head>
  [% INCLUDE 'html_head.ttx' WITH subtitle = __x('Tagged "{tag}"', tag => tag) -%]
  </head>
  <body id="body">
    [% INCLUDE 'page_top.ttx' %]
    [% INCLUDE 'breadcrumbs.ttx' WITH crumbs = [
        { name => __('Tags'), link => 'tags/' },
        { name => tag }
      ]
    %]
    <div class="container">
      <div class="row">
        <div class="span9 middle">
        [% IF defined entries %]
          [% FOREACH entry IN entries %]
            [% INCLUDE 'blog-post.ttx' WITH entry=entry %]
          [% END %]
        [% END %]
        </div>
        <div class="span3 right">
          [% INCLUDE 'sidebar.ttx' %]
        </div>
      </div>
    </div>
    [% INCLUDE 'footer.ttx' %]
  </body>
</html>
