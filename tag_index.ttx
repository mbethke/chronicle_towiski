<!doctype html>
<html lang="de">
  <head>
    [% INCLUDE 'html_head.ttx' WITH subtitle = __('Tags') -%]
    <style type="text/css">.largelist { font-size: large; list-style-type: none; list-style-position: inside; }</style>
  </head>
  <body id="body">
    [% INCLUDE 'page_top.ttx' WITH active='tags' %]
    [% INCLUDE 'breadcrumbs.ttx' WITH crumbs = [ { name => __('Tags'), link => 'tags/' } ] %]
    <div class="container">
      <div class="row">
        <div class="span9 middle">
          [% IF all_tags %]
            <ul class="largelist">
            [% FOREACH tag IN all_tags %]
              <li><a href="[% top %]tags/[% tag.tag %]">[% tag.tag %]</a>&nbsp;([% tag.count %])</li>
            [% END %]
            </ul>
          [% ELSE %]
            <p>[% __("No tagged posts were found.") %]</p>
          [% END %]
        </div>
        <div class="span3 right">
          [% INCLUDE 'sidebar.ttx' %]
        </div>
      </div>
    </div>
    [% INCLUDE 'footer.ttx' %]
  </body>
</html>
