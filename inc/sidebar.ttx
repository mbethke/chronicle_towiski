<div class="panel">
[% IF recent_posts %]
  <h3>[% __("New Posts") %]</h3>
  <dl class="unstyled recent-posts">
  [% FOREACH post IN recent_posts %]
    [% IF 
    	(not defined loop.peek_prev)
	or loop.peek_prev.date_short != post.date_short
    %]
      <dt>[% post.date_short_loc %]</dt>
    [% END %]
    <dd><a href="[% top %][% post.link %]">[% post.title %]</a></dd>
  [% END %]
  </dl>
[% END %]

<h3>[% __("RSS Feed") %]</h3>
<a href="[% top %]index.rss">RSS</a>
</div>
