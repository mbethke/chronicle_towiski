<h2><a href="[% top %][% entry.link %]">[% entry.title %]</a></h2>
[% IF defined entry.tags %]
   <h6>Tags:
     [% FOREACH tag IN entry.tags %]
       <a href="[% top %]tags/[% tag.tag %]">[% tag.tag %]</a>[% IF loop.is_last %].[% ELSE %], [% END %]
     [% END %]
   </h6>
[% END %]
[% entry.body | raw %]
<p class="blog-list-detail">
  [% __x('Posted on {date}', date => entry.date_loc) -%]
  [%- IF entry.time_loc %]
    &nbsp[%
      __nx(
        'at {time}',
        'at {time}',
        strftime('%k', entry.date_epoch),
        time => entry.time_loc
      )
    %]
  [%- END %]&nbsp;&ndash;&nbsp;
  [%- IF entry.comment_count -%]
    <a href="[% top %][% entry.link | uri %]">
    [%- __nx('1 comment', '{ncomments} comments', entry.comment_count, ncomments => entry.comment_count) -%]
    </a>
  [%- ELSE -%]
    [%- __('No comments') -%]
  [% END %]
</p>

