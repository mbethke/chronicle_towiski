<h2><a href="[% top %][% entry.link %]">[% entry.title %]</a></h2>
[% IF defined entry.tags %]
   <h6>Tags:
     [% FOREACH tag IN entry.tags %]
       <a href="[% top %]tags/[% tag.tag %]">[% tag.tag %]</a>[% IF loop.is_last %].[% ELSE %], [% END %]
     [% END %]
   </h6>
[% END %]
[% entry.body | raw %]
