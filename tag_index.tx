<!doctype html>
<html lang="de">
  <head>
    :include html_head { subtitle => __('Tags') };
    <style type="text/css">.largelist { font-size: large; list-style-type: none; list-style-position: inside; }</style>
  </head>
  <body id="body">
    :include page_top { active => 'tags' };
    :include breadcrumbs { crumbs => [ { name => __('Tags'), link => 'tags/' } ] };
    <div class="container">
      <div class="row">
        <div class="span9 middle">
          :if $all_tags {
            <ul class="largelist">
            :for $all_tags -> $tag {
              <li><a href="<: $top :>tags/<: $tag.tag :>"><: $tag.tag :></a>&nbsp;(<: $tag.count :>)</li>
            :}
            </ul>
	        :}
	        :else {
	          <p><: __("No tagged posts were found.") :></p>
          :}
        </div>
        <div class="span3 right">
          :include sidebar;
        </div>
      </div>
    </div>
    :include footer;
  </body>
</html>
